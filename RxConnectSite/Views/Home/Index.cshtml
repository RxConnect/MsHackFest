@{
    ViewData["Title"] = "Home Page";
}

<div id="doorLog">

</div>
<script src="scripts/signalr-client.min.js"></script>
<script lang="javascript">
    let connection = new signalR.HubConnection('/doors');

    connection.on('send', data => {
        document.getElementById("doorLog").textContent = data;
        console.log(data);
    });

    function displayDoors(door){
        console.log(door);
        document.getElementById("doorLog").textContent="ID: "+ door.id + " State: "+ door.state;
    }
    connection.start()
            .then(function(){
                connection.stream("StreamDoors", "AZ3166_Alex").subscribe({
                    next: displayDoors,
                    error: function (err) {
                        logger.log(err);
                    }});
            });
</script>