// Function to recognize button pressed, send action to hub, change LED color and print it in screen.
void doorcontrol()
{
  char buttonData[100];
  // Integer to store which button has been pressed
  int button=-1;
  // Detects which button has been pressed
  if (digitalRead(USER_BUTTON_A) == LOW)
  {
    // Case pressing both buttons, it means user wants to block the door
    if (digitalRead(USER_BUTTON_B) == LOW)
    {
      //Red color
      rgbLed.setColor(255,0,0);
      Screen.print(0,"JCM TECHNOLOGIES");
      Screen.print(1," ");
      Screen.print(2,"DOOR BLOCKED !");
      delay(500);
      Screen.print(2,"DOOR BLOCKED !!");
      delay(500);
      Screen.print(2,"DOOR BLOCKED !!!");
      delay(500);
      while (digitalRead(USER_BUTTON_B) == LOW){}
      while (digitalRead(USER_BUTTON_A) == LOW){}
      button=2;
    } 
    // Case pressing A button, it means user wants to open the door
    else 
    {
      //Green color
      rgbLed.setColor(0,255,0);
      Screen.print(0,"JCM TECHNOLOGIES");
      Screen.print(1," ");
      Screen.print(2,"OPENING DOOR .");
      delay(500);
      Screen.print(2,"OPENING DOOR ..");
      delay(500);
      Screen.print(2,"OPENING DOOR ...");
      delay(500);
      button=0;
    }
  } 
  // Case pressing B button, it means user wants to close the door 
  else if (digitalRead(USER_BUTTON_B) == LOW)
  {
    //Yellow color
    rgbLed.setColor(255,247,0);
    Screen.print(0,"JCM TECHNOLOGIES");
    Screen.print(1," ");
    Screen.print(2,"DOOR CLOSING .");
    delay(500);
    Screen.print(2,"DOOR CLOSING ..");
    delay(500);
    Screen.print(2,"DOOR CLOSING ...");
    delay(500);
    button=1;
  }
  else{
    //If any button is pressed we reset previous button storage
    previousbutton = -1;
  }

  //Sending Data only once when button is pressed, it prevents multiple submits.
  if (button>-1 && previousbutton!=button)
  {
    sprintf_s(buttonData, sizeof(buttonData), "{\"button\":%d,\"button_unit\":\"%s\"}", button,buttonUnit);
    sendData(buttonData,buttonSchema);
    previousbutton = button;
  }
}

